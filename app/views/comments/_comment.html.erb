<div class="media" id="comment-<%= comment.id %>">
  <div class="media-left">
    <a href="#">
      <% if comment.user %>
        <%= user_gavatar comment.user %>
      <% end %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.author_name %></h4>
    <%= simple_format comment.content %>
    <p class="text-right">
      <%= comment.created_at.to_s(:short) %>

      <% if comment.can_delete_by?(current_user) %>
        <%= link_to "Ajax Delete", article_comment_path(@article, comment), :method => :delete, :remote => true %>
      <% end %>

    </p>
  </div>
</div>