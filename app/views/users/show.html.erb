
<h2><%= @user.username %></h2>

<h3>Topic list</h3>

<ul>
<% @user.articles.each do |t| %>

  <li><%= link_to t.title, article_path(t) %> at <%= t.created_at.to_s(:short) %></li>
<% end %>
</ul>

<h3>Comment list</h3>

<ul>
<% @user.comments.group(:article_id).order("comments.id DESC").each do |c| %>

  <li><%= link_to "Re: #{c.article.title}", article_path(c.article, :anchor => "comment-#{c.id}" ) %>
      at <%= c.created_at.to_s(:short) %>
  </li>

<% end %>
</ul>